{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Executable (Windows)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m", "pyinstaller",
                "--clean",
                "--name",
                "GUI-4-hemtt",
                "--windowed",
                "--onefile",
                "--icon=assets/icon.ico",
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe"
                }
            }
        },
        {
            "label": "Build Executable (Linux)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python3",
            "args": [
                "-m", "pyinstaller",
                "--clean",
                "--name",
                "GUI-4-hemtt",
                "--windowed",
                "--onefile",
                "--icon=assets/logo.png",
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash"
                }
            }
        },
        {
            "label": "Clean Build Artifacts (Windows)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "Remove-Item",
                "-Path",
                "build,dist,*.spec",
                "-Recurse",
                "-Force",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe"
                }
            }
        },
        {
            "label": "Clean Build Artifacts (Linux)",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build",
                "dist",
                "*.spec"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash"
                }
            }
        },
        {
            "label": "Build and Run Executable (Windows)",
            "dependsOn": [
                "Build Executable (Windows)"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "${workspaceFolder}/dist/GUI-4-hemtt.exe",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe"
                }
            }
        },
        {
            "label": "Build and Run Executable (Linux)",
            "dependsOn": [
                "Build Executable (Linux)"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "${workspaceFolder}/dist/GUI-4-hemtt",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash"
                }
            }
        },
        {
            "label": "Clean and Build (Windows)",
            "dependsOn": [
                "Clean Build Artifacts (Windows)",
                "Build Executable (Windows)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Clean and Build (Linux)",
            "dependsOn": [
                "Clean Build Artifacts (Linux)",
                "Build Executable (Linux)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run Application (Python, Windows)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe"
                }
            }
        },
        {
            "label": "Run Application (Python, Linux)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python3",
            "args": [
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash"
                }
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "unittest",
                "tools.tests",
                "-v"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Tests (Quiet)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "unittest",
                "tools.tests"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
