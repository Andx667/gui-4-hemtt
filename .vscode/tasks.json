{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Executable",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pyinstaller.exe",
            "args": [
                "--clean",
                "--name",
                "GUI-4-hemtt",
                "--windowed",
                "--onefile",
                "--icon=assets/icon.ico",
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Build Artifacts",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "-Path",
                "build,dist,*.spec",
                "-Recurse",
                "-Force",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build and Run Executable",
            "dependsOn": [
                "Build Executable"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "${workspaceFolder}/dist/GUI-4-hemtt.exe",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean and Build",
            "dependsOn": [
                "Clean Build Artifacts",
                "Build Executable"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run Application (Python)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "hemtt_gui.py"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "unittest",
                "tools.tests",
                "-v"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Tests (Quiet)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "unittest",
                "tools.tests"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
